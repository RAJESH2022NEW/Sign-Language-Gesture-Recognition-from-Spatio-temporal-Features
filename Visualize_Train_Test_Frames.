from google.colab import drive
drive.mount('/content/drive')

import cv2
import os
import pickle
import numpy as np
from os.path import join, exists
from tqdm import tqdm

"""1. Training :"""

Source_folder_Train="/content/drive/MyDrive/Colab Notebooks/SLGR/Dataset/LSA_64/Train_set_videos"
Target_folder_Train="/content/drive/MyDrive/Colab Notebooks/SLGR/Dataset/LSA_64/Train_Frames"

"""2. Testing :"""

Source_folder_Test="/content/drive/MyDrive/Colab Notebooks/SLGR/Dataset/LSA_64/Test_set_videos"
Target_folder_Test="/content/drive/MyDrive/Colab Notebooks/SLGR/Dataset/LSA_64/Test_Frames"

"""-- Visualize all the frames are saved to respective folders"""

classes_dir_Train=os.listdir(Source_folder_Train+'/')
print("*****************************************************")
print("------------------ Training Dataset ----------------")
print("*****************************************************")
for cls_Train in classes_dir_Train:
  src_path_Train=Source_folder_Train+'/'+cls_Train
  dst_path_Train=Target_folder_Train +'/' + cls_Train
  src_files_Train = os.listdir(src_path_Train)
  dst_files_Train = os.listdir(dst_path_Train)
  print("-----------------------------------------------------")
  print(cls_Train, ':', 'Total Videos',len(src_files_Train),':','Total Frames -', len(dst_files_Train))
print("*****************************************************")

classes_dir_Test=os.listdir(Source_folder_Test+'/')
print("*****************************************************")
print("------------------ Testing Dataset ----------------")
print("*****************************************************")
for cls_Test in classes_dir_Test:
  src_path_Test=Source_folder_Test+'/'+cls_Test
  dst_path_Test=Target_folder_Test +'/' + cls_Test
  src_files_Test = os.listdir(src_path_Test)
  dst_files_Test = os.listdir(dst_path_Test)
  print("-----------------------------------------------------")
  print(cls_Test, ':', 'Total Videos',len(src_files_Test),':','Total Frames -', len(dst_files_Test))
print("*****************************************************")
